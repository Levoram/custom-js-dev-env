{
  "name": "custom-javascript-development-environment",
  "version": "1.0.2",
  "description": "Javascript Development Environment: Setup Development faster",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:vite start-mockapi",
    "dev:vite": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --run",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "generate-mock-data": "node buildScripts/generateMockData.js",
    "prestart-mockapi": "npm run generate-mock-data",
    "start-mockapi": "json-server --watch src/api/db.json --port 3005",
    "security-check": "npm audit",
    "clean": "rimraf dist"
  },
  "author": "Nico Kuechler",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/Levoram/custom-js-dev-env"
  },
  "dependencies": {
    "custom-javascript-development-environment": "file:",
    "whatwg-fetch": "^3.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@faker-js/faker": "^9.8.0",
    "@types/node": "^22.15.21",
    "@types/webpack": "^5.28.1",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "browserslist": "^4.16.6",
    "caniuse-lite": "^1.0.30001240",
    "chalk": "^5.2.0",
    "cheerio": "*",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "eslint-plugin-import": "^2.27.5",
    "espree": "^9.5.0",
    "jsdom": "^21.1.2",
    "json-schema-faker": "^0.5.0-rcv.46",
    "json-server": "^0.17.2",
    "npm-run-all": "4.1.5",
    "numeral": "2.0.6",
    "prettier": "^3.5.3",
    "rimraf": "5.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "url": "^0.11.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "browserslist": "> 0.25%, not dead"
}
